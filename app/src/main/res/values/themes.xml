<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppGidi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">#262626</item>  <!-- Color de tu shape -->
        <item name="android:colorButtonNormal">#262626</item>  <!-- Para Android puro -->
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
    </style>
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/rounded_black_button</item>
    </style>
</resources>